<%- include('header') -%>

<h1>Breyta viðburði</h1>

<h2><%= title %></h2>

<form method="post" action="/admin/<%= slug %>" enctype="application/x-www-form-urlencoded">
  <div class="field<% locals.isInvalid('name', errors) ? ' field--invalid' : '' %>">
    <p class="login-type">Nafn*</p>
    <input type="text" name="name" id="name" value="<%= data.name %>" class="">
  </div>

  <div class="field<% locals.isInvalid('comment', errors) ? ' field--invalid' : '' %>">
    <p class="login-type">Lýsing*</p>
    <input type="text" rows="6" name="description" id="description" value="<%= data.description %>" class="comment">
  </div>

    <input type="hidden" name="event" id="event" value="<%= id %>">

  <% if (errors.length > 0) { %>
    <h2 class="errors__title">Villur við skráningu:</h2>
    <ul class="errors">
      <% errors.forEach((error) => { %>
        <li class="error"><label for="<%= error.param %>"><%= error.msg%></label></li>
      <% }) %>
    </ul>
  <% } %>

  <button class="button button--large button--margin">Breyta</button>
</form>

<div class="back">
  <p class="back-text"><a href="/admin">Til baka</a></p>
</div>
<%- include('footer') -%>
