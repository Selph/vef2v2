<%- include('header') -%>
<form method="post" action="/post" enctype="application/x-www-form-urlencoded">
  <div class="field<% locals.isInvalid('name', errors) ? ' field--invalid' : '' %>">
    <label for="name">Nafn*</label>
    <input type="text" name="name" id="name" value="<%= data.name %>" class="">
  </div>

  <div class="field<% locals.isInvalid('comment', errors) ? ' field--invalid' : '' %>">
    <label for="comment">Athugasemd</label>
    <input type="text" name="comment" id="comment" value="<%= data.comment %>" class="">
  </div>

  <div class="field<% locals.isInvalid('comment', errors) ? ' field--invalid' : '' %>">
    <label for="event">Viðburður</label>
    <select name="event" id="event" value="<%= data.events %>" class="">
      <% data.events.forEach(event => { %>
        <option value="<%= event.id %>"><%= event.name %></option>
      <% })%>
    </select>
  </div>

  <% if (errors.length > 0) { %>
    <h2 class="errors__title">Villur við skráningu:</h2>
    <ul class="errors">
      <% errors.forEach((error) => { %>
        <li class"error"><label for="<%= error.param %>"><%= error.msg%></label></li>
      <% }) %>
    </ul>
  <% } %>

  <button class="button button--large button--margin">Skrá</button>
</form>
<%- include('footer') -%>
